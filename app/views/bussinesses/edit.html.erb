<div class="container-fluid">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2">
      <div class="ibox">
        <div class="ibox-title">
          <h2>Bussiness</h2>
        </div>
        <div class="ibox-content">
          <%= simple_form_for(@bussiness, :url => bussiness_path(@user), method: :put) do |f| %>
            <%= f.input :name %>
            <%= f.input :email %>
            <%= f.input :province %>
            <%= f.input :city %>
            <%= f.input :telephone %>
            <%= f.button :submit, class: 'btn btn-primary btn-block'%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>