<%= render 'navbar_cashier' %>
<div class="container-fluid">
	<div class="row">
    <div class="col-8">
      <div class="row">
        <div class="col-12">
          <div class="ibox">
            <div class="ibox-title">
              <div class="ibox-tools">
                <a class="collapse-link">
                  <i class="fa fa-chevron-up"></i>
                </a>
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                  <i class="fa fa-wrench"></i>
                </a>
                <ul class="dropdown-menu dropdown-user">
                  <li><a href="#" class="dropdown-item">Config option 1</a></li>
                  <li><a href="#" class="dropdown-item">Config option 2</a></li>
                </ul>
                <a class="close-link">
                  <i class="fa fa-times"></i>
                </a>
              </div>
              <h2>Saved Transaction</h2>
            </div>
            <div class="ibox-content">
              <div class="table-responsive">
                <table id="product" class="table table-striped table-bordered table-hover dataTables-example">
                  <thead>
                    <tr>
                      <th>ID Transaction</th>
                      <th>Total</th>
                      <th>Status</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                  <% @saved_trans.each do |s| %>
                    <tr>
                      <td><%= s.id_transaction %></td>
                      <td><%= s.total %></td>
                      <td><span class="badge badge-warning">Saved Transaction</span></td>
                      <td><%= link_to "Detail", transaction_path(@outlet, @operator, s, operator: get_operator_type(@operator)), class: 'btn btn-info btn-sm' %></td>
                    </tr>
                  <% end %>
                  </tbody>
                  <tfoot>
                    <tr>
                      <th>ID Transaction</th>
                      <th>Total</th>
                      <th>Status</th>
                      <th>Action</th>
                    </tr>
                  </tfoot>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-4">
      <div class="row">
        <div class="col">
         <!--  <%#= form_tag root_path, method: :post do %>
          <div class="form-group">
            <%#= text_field_tag :cus_name, nil ,class: 'form-control' %>
          </div>
          <%# end %> -->
          <%= link_to "Create new Transaction", new_transaction_path(@outlet, @operator, operator: get_operator_type(@operator)), class: 'btn btn-primary btn-block' %>
        </div>
      </div>
    </div>
  </div>
</div>