<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox">
        <div class="ibox-title">
          <h2>Category</h2>
        </div>
        <div class="ibox-content">
          <%= simple_form_for @category do |f| %>
            <%= f.input :name %>
            <%= f.button :submit, class: 'btn btn-primary btn-block'%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>