<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox">
        <div class="ibox-title">
          <h2>Outcome Stock</h2>
        </div>
        <div class="ibox-content">
          <%= simple_form_for(@outcome, url: outstocks_path, method: :post) do |f| %>
            <%= f.input :outlet_id do %>
              <%= f.select :outlet_id, Outlet.all.map { |o| [o.name, o.id, { class: o.id }] }, include_blank: 'Choose an Outlet', class: 'form-control' %>
            <% end %>
            <%= f.input :date %>
            <%= f.input :note %>
            <%= f.button :submit, class: 'btn btn-primary btn-block'%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>